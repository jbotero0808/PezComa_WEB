<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <style>
    .instagram-post-grid {
      /* Grid Layout */
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      /* Adjust as needed */
      gap: 20px;
      /* Adjust spacing between posts */

      /* Post Styling */
      .post {
        border: 1px solid #ddd;
        border-radius: 5px;
        overflow: hidden;
      }

      /* Image Styling */
      .post-image {
        width: 100%;
        height: 200px;
        /* Adjust image height */
        object-fit: cover;
      }

      /* Post Content */
      .post-content {
        padding: 10px;
      }

      /* Post Header */
      .post-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      /* Post Username */
      .post-username {
        font-weight: bold;
      }

      /* Post Caption */
      .post-caption {
        margin-top: 5px;
      }
    }
  </style>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
  <!--Publicaciones-->
  <header class="bg-white"><%- include('../layouts/header'); %></header>
  <main class="container mx-auto px-6">
    <div class="grid grid-cols-1 gap-4 mb-4">
      <% for (const post of posts) { %>
        <div class="instagram-post-grid w-1/2">
          <div class="post">
            <img src="<%= post.image %>" alt="Describe the image content here" class="post-image">
            <div class="post-content">
              <div class="post-header">
                <span class="post-username">
                  <%= post.title %>
                </span>
              </div>
              <p class="post-caption">
                <%= post.content %>
              </p>
            </div>
            <div class="flex justify-between w-full px-4 pb-4">
              <a href="/post/<%= post.id %>">
                <button class="rounded-full bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-bold py-2 px-4 shadow-md">
                  Ver Comentarios
                </button>                
              </a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </main>
  <footer><%- include('../layouts/footer'); %></footer>
</body>